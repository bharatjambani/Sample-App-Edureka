<h2>About Us: Consume WebAPI using JQuery</h2>

<button id="btnGetProduct" class="btn btn-primary">Get Product</button>

<ul id="ulProducts">

</ul>

<script type="text/javascript">
    $(document).ready(function () {
        var ulProducts = $("#ulProducts");
        $("#btnGetProduct").click(function () {
            $.ajax({
                type: "GET",
                url: "http://localhost:29411/api/products",
                dataType: "json",
                success: function (data) {
                    ulProducts.empty();
                    $.each(data, function (index, val) {
                        ulProducts.append("<li>" + val.name + "</li>")
                    })
                },
                error: function (err) {
                    alert('Something went wrong');
                    ulProducts.empty();
                }
            })
        })

    })
</script>