@*@ViewBag.Result*@
@*@model IEnumerable<Product>*@

@model Sample_App.ViewModels.ProductListViewModel

@*BJ:Dont use HTML helper as it is bit complex syntax but use TagHelper as it is easier to syntax*@
@*@Html.ActionLink("Add Product", "Create","Home")*@

<a asp-action="Create" asp-controller="Home"> Add Product</a>
@foreach (var p in Model.Products)
{
    <div class="card card-outline-primary m-1 p-1">
        <div class="bg-faded p-1">
            <h4>
                <a asp-action="Details" asp-controller="Home" asp-route-id="@p.ProductID">@p.Name</a>
                <a asp-action="Delete" asp-controller="Home" asp-route-id="@p.ProductID">Delete</a>
                <a asp-action="Update" asp-controller="Home" asp-route-id="@p.ProductID">Update</a>
                <span class="badge badge-pill badge-primary" style="float:right">
                    <small>@p.Price.ToString("c")</small>
                </span>
            </h4>
        </div>
        <div class="card-text p-1">@p.Description</div>
    </div>
}

<div page-model="@Model.PagingInfo" page-action="Index"> </div>